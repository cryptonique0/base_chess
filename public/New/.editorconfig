# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Package files
[{package.json,*.yml,*.yaml}]
indent_size = 2

# TypeScript and JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single

# JSON
[*.json]
indent_size = 2

# Python (if needed)
[*.py]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# Clarity smart contracts
[*.clar]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Docker files
[Dockerfile*]
indent_size = 2

[docker-compose*.yml]
indent_size = 2
